{
  "root": true,
  "env": { "node": true, "es2022": true },
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-tabs": "error"
  }
  ,
  "overrides": [
    {
      "files": ["src/lib/**/*.ts"],
      "rules": {
        "no-console": ["error", { "allow": [] }]
      }
    },
    {
      "files": ["tests/**/*.ts", "examples/**/*.ts", "scripts/**/*.mjs", "compliance/**/*.ts"],
      "rules": {
        "no-console": "off"
      }
    }
  ]
}
