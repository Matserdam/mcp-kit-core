{
  "name": "@mcp-kit/core",
  "version": "0.0.1",
  "description": "Lightweight TypeScript Model Context Protocol (MCP) server package",
  "license": "MIT",
  "exports": {
    ".": "./src/mod.ts"
  },
  "publish": {
    "include": [
      "src/",
      "README.md",
      "CHANGELOG.md",
      "LICENSE",
      "compliance/"
    ],
    "exclude": [
      "**/*.test.ts",
      "**/*.spec.ts",
      "tests/",
      "node_modules/",
      ".git/",
      ".github/",
      "dist/"
    ]
  },
  
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  }
}
